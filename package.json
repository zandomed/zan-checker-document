{
  "name": "zan-checker-document",
  "version": "1.0.0",
  "description": "Lambda function to notify when the list of received documents is updated",
  "main": "src/index.ts",
  "scripts": {
    "start": "docker-compose up --build ",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "husky"
  },
  "author": "Miguel Mendoza <miguel@zandome.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/aws-lambda": "^8.10.138",
    "esbuild": "^0.21.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "oxlint": "^0.3.5",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "npm run lint"
    ],
    "**/*": [
      "npm run format"
    ]
  }
}
